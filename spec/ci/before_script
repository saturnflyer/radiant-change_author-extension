cd ~
git clone git://github.com/radiant/radiant.git
cd ~/radiant
if [[ $RADIANT_VERSION != "master" ]]
then
  git fetch
  git checkout -t origin/$RADIANT_VERSION
fi
cp -r ~/builds/*/radiant-change_author-extension vendor/extensions/change_author
gem install bundler --pre
echo gemspec >> Gemfile
echo 'gem "radiant-change_author-extension", :path => "vendor/extensions/change_author"' >> Gemfile
bundle install

case $DB in
  "mysql" )
    mysql -e 'create database radiant_test;'
    cp spec/ci/database.mysql.yml config/database.yml;;
  "postgres" )
    psql -c 'create database radiant_test;' -U postgres
    cp spec/ci/database.postgresql.yml config/database.yml;;
esac

bundle exec rake db:migrate db:migrate:extensions